@model Microsoft.AspNetCore.Identity.IdentityUser

@{
    ViewData["Title"] = "User Details";
}

<h1>User Details</h1>

<div>
    <h4>IdentityUser</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>User Name</dt>
        <dd>@Model.UserName</dd>

        <dt>Email</dt>
        <dd>@Model.Email</dd>

        <!-- Hiển thị Roles -->
        <dt>Roles</dt>
        <dd>
            @if (ViewBag.Roles != null && ViewBag.Roles.Count > 0)
            {
                @string.Join(", ", ViewBag.Roles)
            }
            else
            {
                <text>No roles assigned</text>
            }
        </dd>
    </dl>
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
